<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ruthirsty.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>我要喝水</name>
    <description>
        喝水打卡应用 - 帮助你养成健康的喝水习惯
    </description>
    <author email="dev@ruthirsty.com" href="https://ruthirsty.com">
        RUthirsty Team
    </author>
    <content src="index.html" />

    <!-- App Icons -->
    <icon src="www/img/icon-192.png" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />

        <!-- Android Icons -->
        <icon density="ldpi" src="www/img/icon-192.png" />
        <icon density="mdpi" src="www/img/icon-192.png" />
        <icon density="hdpi" src="www/img/icon-192.png" />
        <icon density="xhdpi" src="www/img/icon-192.png" />
        <icon density="xxhdpi" src="www/img/icon-512.png" />
        <icon density="xxxhdpi" src="www/img/icon-512.png" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
</widget>
